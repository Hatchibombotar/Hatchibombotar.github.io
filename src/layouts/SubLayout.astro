---
import Layout from "./Layout.astro";

const logo = "/assets/logo_small.png";
---

<Layout>
  <div class="mx-auto max-w-2xl px-4 pb-4 text-center sm:text-left">
    <header class="flex items-center">
      <a class="flex items-center my-4" href="/">
        <img src={logo} class="h-8" transition:name="header-icon" />
        <h1 class="font-medium ml-3" transition:name="header-text">Hatchibombotar</h1>
      </a>
      <nav class="ml-auto mr-0">
        <a class="underline" href="/">Home</a>
      </nav>
    </header>
    <hr transition:name="header-seperator" class="mb-2" />
    <slot/>
  </div>
</Layout>